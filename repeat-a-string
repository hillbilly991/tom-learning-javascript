function repeatStringNumTimes(str, num) {
  let repeatedString=""

  while (num > 0) { // if the count is more than 1, execute the following code
    repeatedString += str // repeatedString (which is empty on the first round) equals repeatedString + str
    num -- // once the loop has been completed, the number of time the above line executes is reduced by 1. In this example it is 3 times, so str is added to repeatedStr (which starts off empty) three times
  }

  // repeat after me
  return repeatedString;
}

repeatStringNumTimes("abc", 3);
